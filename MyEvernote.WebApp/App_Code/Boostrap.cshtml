@helper MadalPopUp(string id="myModal", string title="Madal Title", bool showCloseButton=true)
{
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <h4 class="modal-title" id="@(id + "_label")">@title</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    ... 
                </div>
                <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    }
                </div>
            </div>
        </div>
    </div>
}