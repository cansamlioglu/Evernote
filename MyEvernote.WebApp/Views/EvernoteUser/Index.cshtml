@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kullanıcılar</h2>
    </div>
</div>


<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @Boostrap.LinkButton("/EvernoteUser/Create", "primary", "", "", "plus", "Create")
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th> Seçenekler </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td class="col-md-2">
                        @Boostrap.LinkButton("/EvernoteUser/Edit/" + item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)

                        @Boostrap.LinkButton("/EvernoteUser/Details/" + item.Id, "info", "btn-xs", "Details", "search", string.Empty)

                        @Boostrap.LinkButton("/EvernoteUser/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)


                    </td>
                </tr>
            }

        </table>
    </div>
</div>